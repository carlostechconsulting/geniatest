@using System.Linq.Dynamic.Core
@using GeniaWebApp.Source.Main.Data.Models.Genia.EnumTypes
<RadzenDropDown @bind-Value=@ModalType
                Data=ModalTypeOptions
                Change="@(() => ModalTypeChanged.InvokeAsync(ModalType))"
                SelectedItemsText="Itens selecionados"/>

@code {

	public readonly List<ModalTypes> ModalTypeOptions = Enum.GetValues(typeof(ModalTypes))
		.ToDynamicList<ModalTypes>().ToList();

	[Parameter]
	public ModalTypes? ModalType { get; set; }

	[Parameter]
	public EventCallback<ModalTypes?> ModalTypeChanged { get; set; }


}